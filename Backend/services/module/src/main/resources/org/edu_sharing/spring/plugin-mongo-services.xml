<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- MongoDB config -->
    <bean id="mongoClient" class="org.edu_sharing.plugin_mongo.mongo.MongoClientFactoryBean"/>
    <bean id="eduMongoDb" class="org.edu_sharing.plugin_mongo.mongo.MongoDatabaseFactoryBean">
        <constructor-arg name="client" ref="mongoClient"/>
    </bean>
</beans>