<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <!-- MongoDB config -->
    <bean id="mongoClient" class="org.edu_sharing.mongo.MongoClientFactoryBean"/>
    <bean id="eduMongoDb" class="org.edu_sharing.mongo.MongoDatabaseFactoryBean">
        <constructor-arg name="client" ref="mongoClient"/>
    </bean>


    <!-- model config -->
    <bean id="mongoModelDictionary" class="org.edu_sharing.metadata.MongoModelDictionaryImpl"/>
    <bean id="mongoModelBootstrap" class="org.edu_sharing.metadata.MongoModelBootstrap" init-method="bootstrap" abstract="true">
        <property name="modelDictionary" ref="mongoModelDictionary"/>
    </bean>

    <bean id="mongoBootstrap" parent="mongoModelBootstrap">
        <property name="models">
            <list>
                <value>org/edu_sharing/model/metadata-model.xml</value>
            </list>
        </property>
    </bean>

    <bean id="lomMapping" class="org.edu_sharing.mongo.AlfrescoMappingService" depends-on="mongoBootstrap">
        <constructor-arg name="model" value="lom"/>
        <constructor-arg name="modelDictionary" ref="mongoModelDictionary"/>
    </bean>


    <!-- services -->
    <bean id="archiveService" class="org.edu_sharing.service.archive.MongoArchiveServiceImpl" lazy-init="true"/>
    <bean id="nodeServiceImpl" class="org.edu_sharing.service.nodeservice.MongoNodeServiceImpl">
        <constructor-arg name="database" ref="eduMongoDb"/>
        <constructor-arg name="mappingService" ref="lomMapping"/>
    </bean>
    <bean id="documentFactory" class="org.edu_sharing.metadata.MongoDocumentFactory"/>
</beans>