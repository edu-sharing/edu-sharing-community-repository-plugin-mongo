<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.edu_sharing.plugin_mongo.Initialization"/>

    <!-- MongoDB config -->
    <bean id="mongoClient" class="org.edu_sharing.plugin_mongo.mongo.MongoClientFactoryBean"/>
    <bean id="eduMongoDb" class="org.edu_sharing.plugin_mongo.mongo.MongoDatabaseFactoryBean">
        <constructor-arg name="client" ref="mongoClient"/>
    </bean>


    <!-- bootstrap meta data-->
    <bean id="mongoModelDictionary" class="org.edu_sharing.plugin_mongo.datamodel.MongoModelDictionaryImpl"/>
    <bean id="mongoMetaDataBootstrap" class="org.edu_sharing.plugin_mongo.datamodel.MongoMetaDataBootstrap" init-method="bootstrap" abstract="true">
        <property name="modelDictionary" ref="mongoModelDictionary"/>
    </bean>

    <!-- model config -->
    <bean id="mongoMappingBootstrap" parent="mongoMetaDataBootstrap">
        <property name="modelInfos">
            <list>
                <bean class="org.edu_sharing.plugin_mongo.datamodel.MongoModelInfo">
                    <constructor-arg name="name" value="lom"/>
                    <constructor-arg name="alf2mongo" value="org/edu_sharing/mapping/alf2lom.json"/>
                    <constructor-arg name="mongo2alf" value="org/edu_sharing/mapping/lom2alf.json"/>
                    <constructor-arg name="merger">
                        <bean class="org.edu_sharing.plugin_mongo.datamodel.mering.LomMerger"/>
                    </constructor-arg>
                    <constructor-arg name="remover">
                        <bean class="org.edu_sharing.plugin_mongo.datamodel.remover.LomRemover"/>
                    </constructor-arg>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="alfMapping" class="org.edu_sharing.plugin_mongo.service.nodeservice.AlfrescoMappingService">
        <constructor-arg name="modelDictionary" ref="mongoModelDictionary"/>
    </bean>

    <!-- services -->
    <bean id="archiveService" class="org.edu_sharing.service.archive.MongoArchiveServiceImpl" lazy-init="true"/>
    <bean id="nodeServiceImpl" class="org.edu_sharing.plugin_mongo.service.nodeservice.MongoNodeServiceImpl">
        <constructor-arg name="database" ref="eduMongoDb"/>
        <constructor-arg name="mappingService" ref="alfMapping"/>
    </bean>
</beans>