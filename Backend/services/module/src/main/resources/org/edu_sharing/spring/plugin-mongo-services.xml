<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context
          http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.edu_sharing.plugin_mongo.spring_config"/>

    <bean id="ratingService" class="org.edu_sharing.plugin_mongo.rating.RatingServiceImpl">
        <constructor-arg name="database" ref="eduMongoDb"/>
        <constructor-arg name="ratingIntegrityService" ref="ratingIntegrityService"/>
    </bean>
</beans>